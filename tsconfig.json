{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "types": [
      "react/experimental",
      "react-dom/experimental",
      "node",
      "./global.d.ts"
    ],
    "paths": {
      "@/lib/*": ["./src/lib/*"]
    }
  },
  "include": ["./src/"]
}
